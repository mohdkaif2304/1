<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsTodayTimes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6A2CB6</item>
        <item name="colorPrimaryVariant">#E1281B</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#A83B60</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Dark mode -->
    <!-- Screen background if light mode on -->
    <style name="SCREEN">
        <item name="android:background">#181717</item>
    </style>
    <!-- Texts background if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- button background if light mode on -->
    <style name="BUTTON">
        <item name="android:background">#6F7172</item>
        <item name="android:textColor">#EDEBEB</item>
    </style>
</resources>